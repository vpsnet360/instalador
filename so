    STATUS_TXT = b'<font color="green">Web Socket Protocol</font>'
else:
    STATUS_TXT = b'<font color="red">Connection established</font>'

RESPONSE = b'HTTP/1.1 ' + STATUS_RESP + b' ' + MSG + b' ' + FTAG

